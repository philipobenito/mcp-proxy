{
    "name": "mcp-proxy",
    "version": "1.0.0",
    "description": "A conductor service that manages and proxies connections to multiple Model Context Protocol (MCP) servers",
    "type": "module",
    "main": "dist/index.js",
    "scripts": {
        "build": "tsc",
        "start": "node dist/index.js",
        "dev": "tsx --watch src/index.ts",
        "test": "vitest run",
        "test:verbose": "TEST_VERBOSE=true vitest run",
        "test:watch": "vitest --watch",
        "test:watch:verbose": "TEST_VERBOSE=true vitest --watch",
        "test:coverage": "vitest run --coverage",
        "test:coverage:verbose": "TEST_VERBOSE=true vitest run --coverage",
        "lint": "eslint 'src/**/*.{js,ts}' --fix",
        "format": "prettier --write .",
        "format:check": "prettier --check .",
        "format:src": "prettier --write src/",
        "clean": "rm -rf dist",
        "typecheck": "tsc --noEmit",
        "docs:dev": "cd docs && npm start -- --port 8080",
        "docs:build": "cd docs && npm run build",
        "docs:serve": "cd docs && npm run serve -- --port 8080"
    },
    "keywords": [
        "mcp",
        "model-context-protocol",
        "proxy",
        "conductor",
        "ai",
        "llm"
    ],
    "author": "",
    "license": "MIT",
    "engines": {
        "node": ">=22.0.0",
        "pnpm": ">=9.0.0"
    },
    "packageManager": "pnpm@9.0.0",
    "dependencies": {
        "@fastify/cors": "^9.0.0",
        "@fastify/rate-limit": "^9.0.0",
        "@fastify/websocket": "^10.0.0",
        "@modelcontextprotocol/sdk": "^1.0.0",
        "fastify": "^4.0.0",
        "pino": "^8.0.0",
        "ws": "^8.0.0",
        "zod": "^3.22.0"
    },
    "devDependencies": {
        "@types/node": "^22.0.0",
        "@types/ws": "^8.0.0",
        "@typescript-eslint/eslint-plugin": "^8.0.0",
        "@typescript-eslint/parser": "^8.0.0",
        "@vitest/coverage-v8": "^2.0.0",
        "eslint": "^9.0.0",
        "pino-pretty": "^13.1.1",
        "prettier": "^3.0.0",
        "tsx": "^4.0.0",
        "typescript": "^5.6.0",
        "vitest": "^2.0.0"
    }
}
